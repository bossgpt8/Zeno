{
  "rewrites": [
    { "source": "/api/chat", "destination": "/api/chat.js" },
    { "source": "/api/generate-image", "destination": "/api/generate-image.js" },
    { "source": "/api/status", "destination": "/api/status.js" },
    { "source": "/api/firebase-config", "destination": "/api/firebase-config.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}
